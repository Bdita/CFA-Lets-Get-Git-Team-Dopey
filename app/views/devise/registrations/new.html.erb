<%= render 'partials/welcomemsg' %>

<div class="container flex-container">
    <div class=" form-login">
          <div class="light-well">
               <h2 class="page-header text-center">Sign Up</h2>

               <%= form_for resource, :as => resource_name, :url => registration_path(resource_name),
                    html: { class: "form-horizontal center"} do |f| %>
                   <%= devise_error_messages! %>

                   <div class="form-group">
                        <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', class: "form-control" %>
                    </div>

                    <div class="form-group">
                         <%= f.password_field :password, :placeholder => 'Password' , class: "form-control"%>
                    </div>

                    <div class="form-group">
                         <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', class: "form-control" %>
                    </div>

                    <div class="actions">
                         <%= f.submit "Sign up", class: "btn btn-danger btn-block" %>
                    </div>
               <% end %>
          </br>
     </div>
  </div>
</div>
