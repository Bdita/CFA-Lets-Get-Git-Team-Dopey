<%= form_for(event) do |f| %>
     <% if event.errors.any? %>
          <div id="error_explanation">
                <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                     <% event.errors.full_messages.each do |message| %>
                         <li><%= message %></li>
                     <% end %>
                </ul>
          </div>
     <% end %>

     <div class="field">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control"%>
     </div>

     <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
     </div>

     <div class="field">
          <%= f.label :start_time %>
          <%= f.datetime_select :start_time, class: "form-control" %>
     </div>
     <br>
     <div class="field">
          <%= f.label :end_time %>
          <%= f.datetime_select :end_time, class: "form-control" %>
     </div>
     <br>
     <div class="field">
          <%= f.label :hosts %>
          <%= f.text_field :host, class: "form-control" %>
     </div>

     <div class="actions centered-btn-event">
          <%= f.submit %>
     </div>
<% end %>
