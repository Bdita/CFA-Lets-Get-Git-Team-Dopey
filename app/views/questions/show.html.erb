<div class="container">
     <div class="row">
          <div class="col-md-4 col-md-offset-4">
               <div class="card">
                    <div class="card-image">
                         <img class="img-responsive" src="http://blog.commlabindia.com/wp-content/uploads/2016/05/elearning-for-product-training-questions-infographic.jpg">
                    </div>

                    <div class = "card-content">
                         <p>
                              <!-- <strong>Description:</strong> -->
                              <%= @question.description %>
                         </p>
                         <br>
                         <p>
                              <strong>By:</strong>
                              <%= @question.user.email %>
                         </p>
                         <p>
                              <strong>Topic:</strong>
                              <%= @question.topic.title %>
                         </p>
                    </div>

                    <div class = "card-action">
                         <%= link_to 'Edit', edit_question_path(@question) %> |
                         <%= link_to 'Back', questions_path %>
                    </div>
               </div>
          </div>
     </div>
</div>
